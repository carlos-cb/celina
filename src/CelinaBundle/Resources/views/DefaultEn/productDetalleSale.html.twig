{% extends 'fontEn.html.twig' %}

{% block body %}

    <div class="site-wrapper-productList">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="masthead clearfix">
                    <div class="inner">
                        <h2 class="masthead-brand"><a href="{{ path('celina_homepage_en') }}">C E L I N A</a></h2>
                        <nav>
                            <ul class="nav masthead-nav">
                                <li><a href="{{ path('celina_homepage_en') }}#main">Categories</a></li>
                                <li><a id="inline" href="#contacto">Contact</a></li>
                                <li><a href="{{ path('celina_homepage') }}">Español</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="category">
                    <li class="nuevo"><a href="{{ path('celina_product_list_new_en') }}">NEW IN</a></li>
                    <i class="empty-divider" role="separator">&nbsp;</i>
                    <li class="mujer">WOMAN</li>
                    <i class="empty-divider" role="separator">&nbsp;</i>
                    {% for category in categories %}
                        <li class="_category-link" data-categoryid="{{ category.id }}" tabindex="0">
                            <a href="{{ path('celina_product_list_en', { 'categoryId': category.id }) }}">{{ category.categoryNameEn }}</a>
                        </li>
                    {% endfor %}
                    <li class="_category-link">
                        <a href="{{ path('celina_product_list_sale_en') }}">SALE</a>
                    </li>
                </ul>
            </div>

            <div class="col-sm-5 col-sm-offset-3 col-md-6 col-md-offset-2 fotodetalle">
                {% for fotodetalle in fotodetalles %}
                    <div class='col-sm-12 col-md-12 col-lg-12'>
                        <img src="{{ asset('uploads/fotos/' ~ fotodetalle.fotodetalle) }}" height="750px">
                        <div class="product-info">
                            <a class="" href="">{{ fotodetalle.position }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-sm-4 col-md-4 purchase-column">
                <section class="product-detail-purchase" data-module="productDetail, productDetailScrollSpy">
                    <h1 class="product-name product-detail-product-name">{{ product.productNameEn }}</h1>
                    <div class="product-price product-detail-price">
                        <div class="price-column product-detail-price-column">
                            <!-- // BUGFIX GR-3357  PDP - Fix mixed currency signs -->
                            <span id="markedDown_full_Price" class="price line-through">{{ product.price }} EUR</span>
                            <span>&nbsp;&nbsp;</span>
                            <span class="price sale">{{ product.discountPrice }} EUR</span>
                        </div>
                    </div>
                    <div class="product-info-wrapper">
                        <div class="style-number-title">
                            Ref: <span> {{ product.codigo }}</span>
                        </div>

                        <div class="product-style-selector">
                            <div class="row">
                                {% for color in colors %}
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <label class="_color">
                                        <a class="group" rel="gallery1" href="{{ asset('uploads/fotos/' ~ color.colorFoto) }}">
                                            <img src="{{ asset('uploads/fotos/' ~ color.colorFoto) }}" alt="{{ color.colorNameEn }}" height="70px">
                                        </a>
                                        <span class="color-description">{{ color.colorNameEn }}</span>
                                    </label>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        <!-- .add-to-shopping-bag-form -->
                        <div class="save-help talla" data-module="tooltip">
                            <div class="selectric">
                                <p class="label">Sizes</p>
                            </div>
                            <div class="guia" style="width: auto;">
                                <div class="size-guide " style="">
                                    <a class="size-guide-link overlay-open" href="#">
                                        Size Guide</a>
                                </div>
                            </div>
                            <ul class="tallas">
                                <li>XS</li>
                                <li>S</li>
                                <li>M</li>
                                <li>L</li>
                                <li>XL</li>
                            </ul>
                        </div>

                        <div class="save-help" data-module="tooltip">
                            <ul>
                                <li>
                                    <a class="save overlay-open main-product" href="#" tabindex="-1" data-save-item="432489ZHZ813215">Save this article</a>
                                </li>

                                <li class="divider"></li>
                                <li>
                                    <a class="help  may-we-help" href="#">Need any help?</a>
                                    <!-- <div id="tooltip-help" class="tooltip tooltip-help tooltip-mwh">
                                        <ul>
                                            <li class="email">
                                                <a class="overlay-open simple-tabs-opener" href="#may-we-help-overlay" data-simple-tab-open="tab3">
                                                    ENVIAR UN CORREO ELECTRÓNICO</a>
                                            </li>
                                            <li class="chat">
                                        <a class="overlay-open simple-tabs-opener" href="#may-we-help-overlay" data-simple-tab-open="tab1">LIVE CHAT</a>
                                    </li>
                                        </ul>
                                    </div>-->
                                </li>
                            </ul>
                        </div>
                        <div class="product-details-nav">
                            <ul>
                                <li>
                                    <a class="product-details-nav-product-details" href="#">
                                        Product Details</a>
                                </li>
                            </ul>
                        </div>
                        <div class="find-promo">
                            <ul>
                                <li class="promo-free">
                                    Shipping &amp; free return</li>
                            </ul>
                        </div>
                    </div>
                    <!-- .product-info-wrapper -->
                    <input type="hidden" class="gucciProductName" value="Bomber de seda con estampado de rosa">
                    <input type="hidden" class="gucciProductCode" value="432489ZHZ813215">
                    <input type="hidden" class="gucciProductPrice" value="2980.0">
                    <input type="hidden" class="gucciProductCategory" value="Women/Womens-Ready-to-Wear/Womens-Outerwear">
                    <input type="hidden" class="gucciProductVariation" value="estampado de rosa">
                    <input type="hidden" class="gucciProductPostion" value="3">
                    <input type="hidden" class="gucciProductBrand" value="">
                    <input type="hidden" class="gucciProductList" value="ProductGridComponent">
                </section>
            </div>
        </div>
    </div>
{% endblock %}