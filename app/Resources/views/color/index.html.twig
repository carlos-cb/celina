{% extends 'CelinaBundle:BackEnd:index.html.twig' %}

{% block menuslide %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('celina_homepage_admin') }}">总览  <span class="sr-only">(current)</span></a></li>
        <li><a href="#">报告</a></li>
        <li><a href="#">分析</a></li>
    </ul>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('user_index') }}">用户管理</a></li>
        <li><a href="{{ path('category_index') }}">分类管理</a></li>
        <li><a href="{{ path('product_index') }}">产品管理</a></li>
        <li class="active"><a href="{{ path('color_index') }}">颜色管理</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="sub-header">颜色管理</h1>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>颜色名</th>
                <th>颜色编号</th>
                <th>颜色</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.colorName }}</td>
                <td>{{ color.colorCodigo }}</td>
                <td style="background-color: {{ color.colorCodigo }}"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('color_edit', { 'id': color.id }) }}">修改</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('color_new') }}" class="button button-rounded">创建新颜色</a>
        </li>
    </ul>
{% endblock %}
